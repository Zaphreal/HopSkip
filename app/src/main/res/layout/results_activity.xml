<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultsActivity">

    <ImageView
            android:src="@drawable/results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/results_screen"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/results_screen"/>
    <ImageView
            android:src="@drawable/frog"
            android:layout_width="73dp"
            android:layout_height="82dp" android:id="@+id/results_player"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/results_screen" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.817"
            android:contentDescription="@string/results_player"/>
    <TextView
            android:text="Score: "
            android:layout_width="230dp"
            android:layout_height="29dp" android:id="@+id/final_score"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.35"
            app:autoSizeTextType="uniform" android:fontFamily="@font/score" android:textColor="#000000"
            android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>